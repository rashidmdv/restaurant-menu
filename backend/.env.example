# Server Configuration
SERVER_PORT=8000
SERVER_HOST=0.0.0.0
SERVER_ENVIRONMENT=development
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_NAME=restaurant_menu
DB_SSL_MODE=disable
DB_MAX_CONNS=25
DB_MAX_IDLE=5

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=restaurant-menu-images
S3_REGION=us-east-1

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Development Settings
# Set to true to enable debug logging and additional features
DEBUG=false

# CORS Settings (for development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File Upload Settings
MAX_UPLOAD_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,gif

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# JWT Settings (if authentication is added later)
# JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRY=24h

# Email Settings (if email notifications are added later)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
